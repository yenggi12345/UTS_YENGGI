<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mekah"
    tools:context=".MainActivity"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp">



        <TextView
            android:id="@+id/etjudul1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:text="UTSMAN BIN AFFAN DAN DINASTI AYYUBIAH"
            android:textColor="	#A52A2A"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:onClick="clickutsman_bin_affan"
            android:text="SEJARAH UTSMAN BIN AFFAN"
            android:textSize="15sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:onClick="clickayyubiyah"
            android:text="SEJARAH DINASTI AYYUBIAH"
            android:textSize="15sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/etjudul1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:text="SEJARAH"
        android:textColor="	#A52A2A"
        android:textSize="30sp"
        android:textStyle="bold" />


</androidx.constraintlayout.widget.ConstraintLayout>